{
    "name": "finish",
    "guards": [ "isGitApi" ], 
    "description": "Comando para teminar un requerimiento. Automatiza las acciones cuando se termino el desarrollo de un requerimiento",
    "steps": [
        { "criteria": { "field": "isDevelopment", "value": true }, "subtask": "validate-scratch" },
        { "name": "chequea si hay cambios sin commit", "function": "checkCommitPending", "description": "Chequea si hay algo sin commitear:\n ${salida}", "errorMessage": "Tiene modificaciones pendientes", "onError": "commitChanges" },
        { "criteria": { "field": "isDevelopment", "value": true }, "subtask": "update-documentation" },
        { "criteria": { "field": "isDevelopment", "value": true }, "subtask": "validate-code" },
        { "name": "publica la branch", "subtask": "publish-branch", "description": "Publica la branch en Remote", "errorMessage": "No se pudo publicar la branch" },
        { "name": "crea el pull request", "subtask": "create-pull", "description": "Crea el pull request" },
        { "criteria": { "field": "isDevelopment", "value": true }, "subtask": "drop-scratch" }
    ] 
}